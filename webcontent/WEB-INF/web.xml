<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         id="WebApp_ID" version="4.0">

    <display-name>StudentOutpassManager</display-name>
    
    <servlet>
        <servlet-name>PassServlet</servlet-name>
        <servlet-class>java_backend_reference.PassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PassServlet</servlet-name>
        <url-pattern>/api/pass</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SecurityGuardServlet</servlet-name>
        <servlet-class>java_backend_reference.SecurityGuardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecurityGuardServlet</servlet-name>
        <url-pattern>/api/guard</url-pattern>
    </servlet-mapping>
    
</web-app>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>